{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/src"],
  "testMatch": ["**/__tests__/**/*.ts", "**/*.test.ts"],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "globals": {
    "ts-jest": {
      "tsconfig": {
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
      }
    }
  },
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "!src/**/index.ts"
  ],
  "setupFilesAfterEnv": ["<rootDir>/src/test-setup.ts"]
}
